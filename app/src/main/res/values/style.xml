<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom dialog style -->
    <style name="CustomDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize dialog background -->
        <item name="android:background">@drawable/dialog_background</item>
    </style>

    <!-- Custom style for the "Save" button -->
    <style name="SaveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <!-- Customize button background -->
        <item name="android:background">@color/Two</item>
        <!-- Customize button text color -->
        <item name="android:textColor">@color/Three</item>
    </style>

    <!-- Custom style for the "Cancel" button -->
    <style name="CancelButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <!-- Customize button background -->
        <item name="android:background">@color/Two</item>
        <!-- Customize button text color -->
        <item name="android:textColor">@color/Three</item>
    </style>
</resources>
